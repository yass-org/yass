{
  "clearMocks": true,
  "preset": "ts-jest",
 	"transformIgnorePatterns": [
   	"/node_modules/"
 	],
  "transform": {
    "^.+\\.(ts|tsx)?$": "ts-jest",
    "^.+\\.(js|jsx)$": "babel-jest"
  },  
  "testEnvironment": "jsdom",
  "testMatch": [
   	"**/__tests__/**/*.ts"
 	],
  "testPathIgnorePatterns": [
   	"/node_modules/"
 	],
  "roots": [
   	"<rootDir>"
 	],
  "coveragePathIgnorePatterns": [
   	"/node_modules/"
 	], 
 	"moduleDirectories": [
   	"node_modules"
 	],  
 	"verbose": true,
 	"watchPathIgnorePatterns": [],
 	"watchman": true
}
